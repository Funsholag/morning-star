<img id="clouds" alt="" class="background-image responsive-img" src="/clouds-2354580_1920.jpg">
<div class="border-form-div">
  <h2 class= "signInTitle">Sign Up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, class: "form-control center responsive", placeholder: "Email", :autofocus => true %>

    <%= f.password_field :password, autocomplete: "off", class: "form-control center responsive", placeholder: "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control center responsive", placeholder: "Confirm Password" %>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end -%>
    <span class= "signInBtn">
      <%= f.submit "Sign Up"%>
    </span>
      <% end %>

      <%= render "devise/shared/links" %>
</div>
