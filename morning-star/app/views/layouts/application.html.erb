              <li><%= link_to "Join", new_user_registration_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Log In", new_user_session_path, :class => "navlink black-text" %></li>
              <% else %>
              <li><%= link_to "About", about_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Directory", member_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Join", new_user_registration_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Log In", new_user_session_path, :class => "navlink black-text" %></li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </header>


    <%= yield %>

    <footer class="page-footer black">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text"> About Us</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="/about/mission">Our Mission</a></li>
              <li><a class="grey-text text-lighten-3" href="/about/history">Our History</a></li>
              <li><a class="grey-text text-lighten-3" href="/about/staff">Our Staff</a></li>
              <li><a class="grey-text text-lighten-3" href="/member">Directory of Members</a></li>
            </ul>
