              <li><%= link_to "Directory", member_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Join", new_user_registration_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Log In", new_user_session_path, :class => "navlink black-text" %></li>

              <% else %>
              <ul>
                <li>
                  <a class="dropdown-button black-text" data-activates="dropdown2" data-beloworigin="true" href="/about">About</a>
                </li>
                <li><%= link_to "Directory", member_path, :class => "navlink black-text" %></li>
                <li><%= link_to "Join", new_user_registration_path, :class => "navlink black-text" %></li>
                <li><%= link_to "Log In", new_user_session_path, :class => "navlink black-text" %></li>
              </ul>
              <ul id="dropdown2" class="dropdown-content black-text">
                <li><a href="/about/mission">Mission</a></li>
                <li><a href="/about/staff">Staff</a></li>
                <li><a href="/about/mission">History</a></li>
              </ul>
              <% end %>
            </ul>

            <ul class="side-nav black-text" id="mobile-demo">
              <li><a href="/">Home</a></li>
              <% if user_signed_in? %>
              <li><%= link_to "About", about_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Directory", member_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Edit Profile", edit_user_registration_path, :class => "navlink black-text" %></li>
