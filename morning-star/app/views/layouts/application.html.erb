              <% if user_signed_in? %>
              <li><%= link_to "About", about_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Directory", member_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Edit Profile", edit_user_registration_path, :class => "navlink black-text" %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => "navlink black-text" %></li>

